<!DOCTYPE html>
<html ng-app="clg">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body ng-controller="formCtrl" class="ng-cloak">
    <h1><%= title %></h1>
    <p>Fill out the fields below. Not all of them have to be Filled out.</p>
    <div>
      <form novalidate>
        <h2>You</h2>
        <input type="text" ng-model="person.name" placeholder="First Name"/><br />
        <input type="text" ng-model="person.last" placeholder="Last Name"/><br />
        <input type="text" ng-model="person.address" placeholder="Address Line 1"/><br />
        <input type="text" ng-model="person.address2" placeholder="Address Line 2 (optional)"/><br />
        <input type="tel" ng-model="person.phone" placeholder="Phone Number"/><br />
        <input type="email" ng-model="person.email" placeholder="Email"/><br />
        <input type="url" ng-model="person.url1" placeholder="URL"/><br />
        <input type="url" ng-model="person.url2" placeholder="URL"/><br />
        <input type="url" ng-model="person.url3" placeholder="URL"/><br />
        <input type="button" ng-click="resetUser()" value="Reset You" />
      </form>
      <form novalidate>
        <h3>New Job</h3>
        <input type="text" ng-model="job.companyName" placeholder="Company Name"/><br />
        <input type="text" ng-model="job.managerName" placeholder="Hiring Person Name"/><br />
        <input type="text" ng-model="job.address" placeholder="Address"/><br />
        <input type="text" ng-model="job.address2" placeholder="Address Line 2"/><br />
        <input type="tel" ng-model="job.phone" placeholder="Phone"/><br />
        <input type="email" ng-model="job.email" placeholder="Contact Email"/><br />
        <input type="text" ng-model="job.title" placeholder="Job Title"/><br />
        <input type="text" ng-model="job.board" placeholder="Where it was advertised"/><br />
        <input type="button" ng-click="resetJob()" value="Reset Job" />
      </form>
      <form novalidate>
        <h3>Current Job</h3>
        <input type="text" ng-model="currentJob.title" placeholder="Title"/><br />
        <input type="number" ng-model="currentJob.yearsWorked" placeholder="Years Worked"/><br />
        <input type="text" ng-model="currentJob.field" placeholder="Field of Work"/><br />
        <input type="text" ng-model="currentJob.companyName" placeholder="Company Name"/><br />
        <textarea ng-model="currentJob.duties" placeholder="Duties you preformed."></textarea><br />
        <textarea ng-model="currentJob.projects" placeholder="Projects You've Done"></textarea><br />
        <textarea ng-model="currentJob.commendations" placeholder="Good Stuff People Have Said About You"></textarea><br />
        <input type="button" ng-click="resetCurrent()" value="Reset Current" />
      </form>
    </div>
  <div class="spacer">
    <h1 ng-show="person.name">{{person.name | capitalize}} <span ng-show="person.last">{{person.last | capitalize}}</span></h1>
    <hr ng-show="person.name">
    <div class="small">
      <span ng-show="person.address">{{person.address | capitalize}} {{person.address2 | capitalize}} | </span>
      <span ng-show="person.phone">{{person.phone}} | </span>
      <span ng-show="person.email">{{person.email}} <span ng-hide="person.url1.length > 0"|</span> </span>
    </div>
    <p ng-show="person.name.length > 0">{{date | date:'MM-dd-yyyy'}}</p>
    <p>
      <span ng-show="job.managerName">{{job.managerName}}<br /></span>
      <span ng-show="job.companyName">{{job.companyName}}<br /></span>
      <span ng-show="job.address">{{job.address}}<br /></span>
      <span ng-show="job.address2">{{job.address2}}<br /></span>
      <span ng-show="job.phone">{{job.phone}}<br /></span>
      <span ng-show="job.email">{{job.email}}<br /></span>
    </p>
    <p ng-show="job.title">
      RE: {{job.title}}, {{date | date:'MM-dd-yyyy'}}
    </p>
    <p ng-show="job.managerName">
      Dear {{job.managerName}},
    </p>
    <p ng-show="person.name.length > 0 && !job.managerName">
      To Whom It May Concern:
    </p>
  </div>
  </body>
  <script src="/javascripts/ng.js" type="text/javascript"></script>
</html>
